<p id="notice"><%= notice %></p>

<h1>Torrents</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Release year</th>
      <th>Url</th>
      <th>Main</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @torrents.each do |torrent| %>
      <tr>
        <td><%= torrent.title %></td>
        <td><%= torrent.release_year %></td>
        <td><%= torrent.url %></td>
        <td><%= torrent.main %></td>
        <td><%= link_to 'Show', torrent %></td>
        <td><%= link_to 'Edit', edit_torrent_path(torrent) %></td>
        <td><%= link_to 'Destroy', torrent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Torrent', new_torrent_path %>
